<a href="/" class="btn btn-primary"><i class="glyphicon glyphicon-user"></i> Add New</a>
<h3>{{viewTitle}}</h3>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Full Name</th>
      <th>Email</th>
      <th>Mobile</th>
      <th>City</th>
    </tr>
  </thead>
  <tbody>
    {{#each allEmpData}}
    <tr>
     <td>{{this.fullName}}</td>
     <td>{{this.email}}</td>
     <td>{{this.mobile}}</td>
     <td>{{this.city}}</td>
     <td>
       <a href="/{{this._id}}"><i class="glyphicon glyphicon-pencil"></i></a>
       <a href="/delete/{{this._id}}" onclick="return confirm('Are you sure to delete the record ?')"><i class="glyphicon glyphicon-remove"></i></a>
     </td>
    </tr>
    {{/each}}
  </tbody>
</table>